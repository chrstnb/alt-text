{
"manifest_version": 2,
    "name": "Images for Alt",
    "description": "Generates alt text for every image on the page, either by adding a descriptive caption alongside the existing one, or by adding one in the first place.
                    Also allows image removal for quicker page loading.",
    "version": "0.5",

    "browser_action": {
        "default_popup": "popup.html"
    },

    "permissions": [
        "activeTab",
        "storage",
        "*://*/*"
    ],
    "icons": {"19": "icon.png",
              "48": "icon48.png",
              "128": "icon128.png"},
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "jquery.js",
                "process.js",
                "removeImages.js"
            ],
            "css": [
                "popupStyle.css"
            ],
            "run_at": "document_end"
        }
    ]
}
